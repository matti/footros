#!/usr/bin/env bash
set -e

source "/usr/local/opt/chpharos/share/chpharos/chpharos.sh"
chpharos install 2.3.3
chpharos use 2.3.3

case "$1" in
  "ssh")
    footloose ssh root@footros0
  ;;
  "recreate")
    docker-compose build
    footloose create
    pharos-cluster --debug up
  ;;
  *)
    echo ""
    echo "USAGE: footros recreate|ssh"
    exit 1
  ;;
esac
